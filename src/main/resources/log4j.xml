<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="Console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[${name}] - %d{ISO8601} - %X{login} - %m%n" />
        </layout>
    </appender>

    <appender name="File" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${project.name}-${project.version}.log" />
        <param name="MaxFileSize" value="1000KB" />
        <param name="MaxBackupIndex" value="20" />

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[${name}] - %d{ISO8601} - %X{login} - %m%n" />
        </layout>
    </appender>
    
    <appender name="Email" class="com.bizintelapps.zytoon.service.util.GmailSMTPAppender">
        <param name="BufferSize" value="1" />
        <param name="SMTPHost" value="smtp.gmail.com" />
        <param name="SMTPPort" value="465" />
        <param name="SMTPUsername" value="team@zytoon.me" />
        <param name="SMTPPassword" value="Teamu123$" />
        <param name="From" value="team@zytoon.me" />
        <param name="To" value="mdshannan@gmail.com" />
        <param name="Subject" value="Zytoon.me Error Log" />
        <param name="SMTPDebug" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[${name}] - %d{ISO8601} - %X{login} - %m%n" />
        </layout>
       
    </appender>

    <appender name="EMAIL_ASYNC" class="org.apache.log4j.AsyncAppender">
        <!-- <errorHandler class="org.apache.log4j.helpers.OnlyOnceErrorHandler"/> -->
        <appender-ref ref="Email"/>
        <!--<param name="addAppender" ref="Console"/> -->
    </appender>

    <logger name="com.bizintelapps.zytoon">
        <level value="trace" />
    </logger>

    <logger name="com.bizintelapps.zytoon.dao">
        <level value="trace" />
    </logger>

	<!-- JSF Phase listener (debug purpose) -->
	<!-- <logger name="org.springframework.faces.support.RequestLoggingPhaseListener"> -->
	<!-- <level value="${log4j.level}" /> -->
	<!-- </logger> -->

	<!-- TRANSACTION -->
    <logger name="org.springframework.transaction">
        <level value="error" />
    </logger>
    <logger name="org.springframework.orm.hibernate3">
        <level value="error" />
    </logger>

	<!-- HIBERNATE & CACHE SPECIFIC -->
    <logger name="org.hibernate.cache.EhCacheProvider">
        <level value="error" />
    </logger>

    <logger name="org.hibernate">
        <level value="error" />
    </logger>

	<!-- Log Hibernate SQL queries to file (log level must be DEBUG to enable it) -->
    <logger name="org.hibernate.SQL" additivity="false">
        <level value="error" />
    </logger>

	<!-- log the param value in the prepared statement and the query result! (log level must be TRACE to enable it) -->
	<!--<logger name="org.hibernate.type"> -->
	<!--<level value="trace" /> -->
	<!-- <appender-ref ref="File"/> -->
	<!--</logger> -->

	<!-- OTHER OPEN SOURCE PACKAGES -->
    <logger name="org.springframework.security">
        <level value="error" />
    </logger>
    <logger name="org.apache.commons">
        <level value="error" />
    </logger>
    <logger name="org.springframework">
        <level value="error" />
    </logger>
    <logger name="org.springframework.beans.factory.support">
        <level value="error" />
    </logger>
    <logger name="org.apache.log4j">
        <level value="error" />
    </logger>

    <root>
        <priority value="error" />
        <appender-ref ref="Email" />
        <appender-ref ref="Console" />
        <appender-ref ref="File" />
    </root>
</log4j:configuration>
