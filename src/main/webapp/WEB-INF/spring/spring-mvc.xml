	<!-- annotation scanning -->
	<context:component-scan base-package="com.bizintelapps.zytoon.web" />

	<!-- enable annotation based security -->
	<security:global-method-security jsr250-annotations="enabled" secured-annotations="enabled" />

	<!-- enable annotation based controller -->
	<mvc:annotation-driven conversion-service="customFormattingConversionService" />

	<!-- add interceptors to the web controllers -->
	<mvc:interceptors>
